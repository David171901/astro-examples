---
import { CountUp } from './CountUp'
---

<section class="mx-auto max-w-6xl px-20 py-20">
	<h2 class="font-tomaso mb-10 text-balance text-center text-4xl lg:mb-20 lg:text-6xl">
		LOS ESLAND EN NÚMEROS
	</h2>
	{
		(
			<div class="grid grid-cols-1 gap-y-10 lg:grid-cols-3">
				<div class="flex flex-col items-center justify-center">
					<span class="text-7xl font-bold tabular-nums tracking-tighter">
						<CountUp initial={0} final={69.9} decimals={1} duration={500} client:visible />M
					</span>
					<span class="uppercase opacity-70">DE VISUALIZACIONES</span>
				</div>
				<div class="flex flex-col items-center justify-center">
					<span class="text-7xl font-bold tabular-nums tracking-tighter">
						<CountUp initial={0} final={227} duration={500} client:visible />
					</span>
					<span class="uppercase opacity-70">NOTICIAS EN PRENSA</span>
				</div>
				<div class="flex flex-col items-center justify-center">
					<span class="text-7xl font-bold tabular-nums tracking-tighter">
						<CountUp initial={0} final={3.2} decimals={1} duration={500} client:visible />
						M€
					</span>
					<span class="uppercase opacity-70">EN MEDIOS GANADOS</span>
				</div>
			</div>
		)
	}
</section>
